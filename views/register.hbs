{{> header }}
<div class="container">
  <h1>{{title}}</h1>
  
  {{#if errors}}
    {{#each errors}}
      <div class="alert alert-danger">
        {{this.msg}}
      </div>
    {{/each}}
  {{/if}}
</div>
    <form method="POST" action="/register">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" name="username" class="form-control" placeholder="Username must be between 4-15 characters">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" name="email" class="form-control" placeholder="Valid email name@email.com">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Username must be between 4-15 characters">
    </div>
    <div class="form-group">
      <label for="passwordMatch">Re Enter Password</label>
      <input type="password" name="passwordMatch" class="form-control" placeholder="Re-Enter Password">
    </div>
    <div class="form-group">
      <label for="bootCamp"> Enter Boot Camp Attending</label>
      <input type="text" name="bootcamp" class="form-control" placeholder="Boot Camp">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{{> footer-end }}